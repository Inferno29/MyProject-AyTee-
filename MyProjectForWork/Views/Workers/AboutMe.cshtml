@using MyProjectForWork.Models
@model MyProjectForWork.Models.Worker

@{
    ViewBag.Title = "AboutMe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="grd-colors">



    <!-- First Container -->
    <div class="container-fluid bg-1 text-center">
        <h3 class="margin">Hello I am</h3>
        <img src="/Resource/spongebob.jpg" class="img-responsive img-rounded margin" style="display:inline" alt="Bird" width="350" height="350">
        <h3>@Model.UName</h3>
    </div>

    <!-- Second Container -->
    <div class="container-fluid bg-2 text-center">
        <h3 class="margin">What Am I?</h3>
        @if (Model.AcceptingWork)
        {
            <p>I am @Model.Name and my surname is @Model.SurName and I am accepting work currently</p>
        }
        <p>What you need to know about me is @Model.About </p>

    </div>

    <!-- Third Container (Grid) -->
    <div class="container-fluid bg-3 text-center">
        <h3 class="margin">Where To Find Me?</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <p>I currently live in @Model.Adress</p>
                <div class="img-live-in">
                    <img src="/Resource/banner.jpg" class="img-responsive margin" style="width:100%" height="250" alt="Image">
                </div>

            </div>
            <div class="col-sm-4">
                <p>My field of work is @Model.JobField.Field</p>
                <div class="field-of-work">
                    <img src="/Resource/banner.jpg" class="img-responsive margin" style="width:100%" height="250" alt="Image">
                </div>
            </div>

            @if (Model.AcceptingWork)
            {
                <div class="col-sm-4">
                    <p>I am currently available for work</p>
                    <div class="available-for-work">
                        <img src="/Resource/banner.jpg" class="img-responsive margin" style="width:100%" height="250" alt="Image">
                    </div>

                </div>
            }
            else
            {
                <div class="col-sm-4 not-available-box">
                    <p>I am currently NOT available for work</p>
                    <div class="not-available-for-work">
                        <img src="/Resource/banner.jpg" class="img-responsive margin" style="width:100%" height="250" alt="Image">
                    </div>

                </div>
            }



        </div>
    </div>


</div>




